<resources >
    <!-- Base application theme. -->
    <style name="Theme.First" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/fucsia_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor">@color/fucsia_700</item>

        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
    </style>

    <style name="ActionTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="android:statusBarColor">@color/fucsia_700</item>

        <item name="android:textColorPrimary">@color/white</item>

        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.Light.ActionBar.Solid">
        <item name="background">@color/fucsia_200</item>
    </style>


    <style name="Theme.First.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>


    <style name="Theme.First.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.First.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="BottomNavigation">
        <item name="itemIconTint">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/teal_200</item>
    </style>

</resources>